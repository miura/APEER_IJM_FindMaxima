{
    "spec": {
        "inputs": {
            "input_files": {
                "type:list[file]": {
                    "format": [
                        "tiff"
                    ]
                }
            },
            "gaussian_filter_sigma": {
                "type:number": {
                    "lower_inclusive": 0,
                    "upper_inclusive": 20
                },
                "default": 1.5
            },
            "prominence": {
                "type:number": {
                    "lower_inclusive": 0,
                    "upper_inclusive": 50
                },
                "default": 6
            },
            "output_filename": {
                "type:string": {},
                "default": "output"
            }            
        },
        "outputs": {
            "output_files": {
                "type:list[file]": {
                    "format": [
                        "tiff"
                    ]
                }
            }
        }
    },
    "ui": {
        "inputs": {
            "input_files": {
                "index": 3,
                "label": "Input Files",
                "description": "2D time series epidermal cell image stacks",
                "widget:none": null
            },            
            "gaussian_filter_sigma": {
                "index": 4,
                "label": "Gaussian Filter Sigma",
                "description": "Sigma value for the Gaussian Blur",
                "widget:textbox": {}
            },
            "prominence": {
                "index": 5,
                "label": "Prominence",
                "description": "Larger values select less maxima",
                "widget:textbox": {}
            },
            "output_filename": {
                "index": 2,
                "label": "Output Filename (default output.tif)",
                "widget:textbox": {},
                "description": "name of the output file"
            }         
        },
        "outputs": {
            "output_files": {
                "index": 1,
                "label": "Output Files",
                "description": "Segmented Image Stack"
            }
        }
    }
}